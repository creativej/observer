<div class="row">
  <div class="large-2 columns">
  </div>
  <div class="large-8 columns large-centered">
    <h1>Data source</h1>
    <table class="table--common">
      <thead>
        <tr>
          <th>Name</th>
          <th>Token</th>
          <th>created by</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
      <% @queries.each do |query| %>
        <tr>
          <td>
            <a href="<%= edit_query_path(query) %>">
              <%= query.name %>
            </a>
          </td>
          <td>
          <% if query.db_connection.present? %>
            <%= link_to query.token, data_queries_path({:token => query.token}), :target => '_blank' %>
          <% end %>
          </td>
          <td><%= query.user.username %></td>
          <td class="action-cell">
              <a href="<%= edit_query_path(query) %>" class="action"><i class="icon-pencil"></i></a>
          </td>
          <td class="action-cell">
            <a href="<%= query_path(query) %>" class="action" data-confirm="Are you sure?" data-method="delete">
              <i class="icon-cross"></i>
            </a>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br />

    <a href="<%= new_query_path %>" class="button small"><i class="icon-plus"></i>New query</a>
  </div>
  <div class="large-2 columns">
  </div>
</div>
